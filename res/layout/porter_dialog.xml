<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <EditText android:id="@+id/porter_text" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:inputType="textUri"
	android:singleLine="true"
	/>

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
    	<Button android:text="@string/layout_button_select_file" android:id="@+id/porter_selectbutton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    	<Button android:id="@+id/porter_actionbutton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
</LinearLayout>


