<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
 
    <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/plot_button_nextalgo"
                android:layout_width="0px"
                android:text="@string/plot_type_nextalgo"
    android:layout_height="wrap_content"
    android:layout_weight="1"
            />
            
                
        <Button
            android:id="@+id/plot_button_nextalgo_kumul"
                android:layout_width="0px"
                android:text="@string/plot_type_nextalgo_kumul"
    android:layout_height="wrap_content"
    android:layout_weight="1"
            />
            
        
        
        <Button
            android:id="@+id/plot_button_absinterval"
                android:layout_width="0px"
                android:text="@string/plot_type_interval"
    android:layout_height="wrap_content"
    android:layout_weight="1"
            />
                    
    </LinearLayout>
    
    
    
    <com.androidplot.xy.XYPlot
    android:id="@+id/plot_plot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    title="A Simple XYPlot Example"/>
</LinearLayout>