	         />
	         
	        <TextView android:id="@+id/cardviewdialog_average_grade"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	         />
    </TableRow>

    <TableRow>
          	<TextView
	        android:text="@string/layout_card_sessions"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	         />
	         
	        <TextView android:id="@+id/cardviewdialog_count"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	         />
    </TableRow>

            <TableRow>
          	<TextView
	        android:text="@string/layout_card_last_session"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	         />
	         
	        <TextView android:id="@+id/cardviewdialog_session"
	        android:layout_width="wrap_content"
