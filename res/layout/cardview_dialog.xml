	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	         />
	         
	        <TextView android:id="@+id/cardviewdialog_difficulty"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	         />
    </TableRow>
    
    
</TableLayout>


	</LinearLayout>




         <TextView
	        android:text="@string/layout_card_chapters_occur"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	            android:paddingTop="10sp"
	         />

       <ListView android:id="@+id/cardviewdialog_listview" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            />
	
</LinearLayout>
