<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <LinearLayout android:id="@+id/sync_checkout_filing_layout" 
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
     <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:id="@+id/sync_checkout_filing_caption"
	         />
    <LinearLayout 
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
            <Button 
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/sync_checkout_filing_upload"
	        android:text="@string/layout_sync_checkout_button_upload_filing"
	        android:layout_weight="1"
        />
            <Button 
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/sync_checkout_filing_download"
	        android:text="@string/layout_sync_checkout_button_download_filing"
	        android:layout_weight="1"
        />
        
        </LinearLayout>
        </LinearLayout>
            
            
        <Button 
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/sync_checkout_button"
	        android:text="@string/layout_sync_checkout_button_sync_books"
        />
        
        
         <TextView
            android:id="@+id/sync_checkout_books_add_label" 
	        android:text="@string/layout_sync_checkout_books_adding"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/SyncCheckoutTitle"
	         />
        <ListView android:id="@+id/sync_checkout_books_add" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
			android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fastScrollEnabled="true"
            />
        
                 <TextView android:id="@+id/sync_checkout_books_delete_label" 
	        android:text="@string/layout_sync_checkout_books_deleting"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/SyncCheckoutTitle"
	         />
        <ListView android:id="@+id/sync_checkout_books_delete" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
			android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fastScrollEnabled="true"
            />
        
                         <TextView android:id="@+id/sync_checkout_books_update_label" 
	        android:text="@string/layout_sync_checkout_books_update"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/SyncCheckoutTitle"
	         />
        <ListView android:id="@+id/sync_checkout_books_update" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
			android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fastScrollEnabled="true"
            />
        
         <TextView android:id="@+id/sync_checkout_language_add_label" 
	        android:text="@string/layout_sync_checkout_language_adding"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/SyncCheckoutTitle"
	         />
        <ListView android:id="@+id/sync_checkout_language_add" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
			android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fastScrollEnabled="true"
            />
        
                 <TextView android:id="@+id/sync_checkout_language_delete_label" 
	        android:text="@string/layout_sync_checkout_language_deleting"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/SyncCheckoutTitle"
	         />
        <ListView android:id="@+id/sync_checkout_language_delete" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
			android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fastScrollEnabled="true"
            />
        
        
        
        
</LinearLayout>
