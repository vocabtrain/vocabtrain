<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/training_titlebar_layout"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
    
            
    	   <ImageView  android:id="@+id/training_titlebar_image"
        		android:layout_width="40dip"
        		android:layout_height="20dip"
        		android:layout_alignParentLeft="true"
        		android:layout_gravity="left"
        		android:layout_margin="3dip"
        		             android:contentDescription="@string/desc_training_titlebar_image"
        		
		   />
    
	
	

		
	<TextView android:id="@+id/training_titlebar_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true"
		/>
		
	<ProgressBar android:id="@+id/training_titlebar_progress"
		style="@android:style/Widget.ProgressBar.Horizontal"
		android:minHeight="5dip" android:maxHeight="5dip"
		android:layout_height="wrap_content" android:layout_below="@id/training_titlebar_count"
		android:layout_alignParentRight="true" android:layout_width="wrap_content"/>

	<LinearLayout 
		android:layout_toLeftOf="@id/training_titlebar_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingRight="7dip"
		>

		<TextView android:id="@+id/training_titlebar_days_diff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="3dip"
		android:paddingRight="3dip"
		/>


		<TextView android:id="@+id/training_titlebar_old_cards_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#00ff00"
		android:paddingLeft="3dip"
		android:paddingRight="3dip"
		/>
	
	
	<TextView android:id="@+id/training_titlebar_new_cards_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#7f7f7f"
		android:paddingLeft="3dip"
		android:paddingRight="3dip"
		/>


	<TextView android:id="@+id/training_titlebar_bad_cards_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ff0000"
		android:paddingLeft="3dip"
		android:paddingRight="3dip"
		/>
		
	</LinearLayout>
	
<TextView android:id="@+id/training_titlebar_caption"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/training_titlebar_image"
		android:layout_toLeftOf="@id/training_titlebar_progress"
		android:layout_centerHorizontal="true"
		/>

	<TextView android:id="@+id/training_titlebar_card_type"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/training_titlebar_image"
		/>
</RelativeLayout>
	<!--   android:layout_centerInParent="true" -->
