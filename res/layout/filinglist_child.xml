<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<CheckBox android:id="@+id/filinglist_child_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:gravity="center_vertical" 
       />
    

 <TextView  android:id="@+id/filinglist_child_caption"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    style="@style/ListChildTitle"
    />


     
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
        android:gravity="center_vertical|right"
    android:layout_gravity="right"
    android:layout_width="fill_parent"
    android:paddingRight="?android:attr/scrollbarSize"
    android:layout_height="fill_parent">
     
    
     <TextView  android:id="@+id/filinglist_child_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:layout_weight="1"
    />
       
    <TextView  android:id="@+id/filinglist_child_selection_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_weight="1"
    />
      
    
      	<ProgressBar android:id="@+id/filinglist_child_progress_selection"
		style="@android:style/Widget.ProgressBar.Horizontal"
		android:progressDrawable="@drawable/progressbar_selection"
		android:minHeight="2dip" android:maxHeight="5dip"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>
      	
    
    
     </LinearLayout>
     

 </LinearLayout>
 
