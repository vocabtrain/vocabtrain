<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	>
			<TextView
			    		android:id="@+id/update_confirm_top"
			    
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
			style="@android:style/TextAppearance.Large"
			android:drawableLeft="@drawable/ic_home"
		/>
	
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:id="@+id/update_confirm_buttonlayout"
		>
		<Button
			android:id="@+id/update_confirm_yes"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/button_yes"
		/>
		<Button
			android:id="@+id/update_confirm_no"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@android:string/no"
		/>
	</LinearLayout>
	
	<CheckBox
		android:id="@+id/update_confirm_stop"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/update_confirm_buttonlayout"
		android:text="@string/layout_update_confirm_stop"
	/>
	
	<TextView
		android:layout_height="0px"
		android:layout_width="fill_parent"
		android:layout_margin="5dip"
		android:text="@string/layout_update_confirm_text"
		style="@android:style/TextAppearance.Medium"
				android:layout_above="@id/update_confirm_stop"
						android:layout_below="@id/update_confirm_top"
		
	/>
	
		
	
</RelativeLayout>
