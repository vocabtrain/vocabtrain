<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<CheckBox android:id="@+id/booklist_child_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:gravity="center_vertical" 
       />
       

 <TextView  android:id="@+id/booklist_child_caption"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:ellipsize="start"
    style="@style/ListChildTitle"
    />
    

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_vertical|right"
    android:layout_gravity="right"
    android:paddingRight="?android:attr/scrollbarSize"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
     
     <TextView  android:id="@+id/booklist_child_cards_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    />
     
      <TextView  android:id="@+id/booklist_child_filing_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    />
           
      
      	      	<ProgressBar android:id="@+id/booklist_progress_selection"
		style="@android:style/Widget.ProgressBar.Horizontal"
				android:progressDrawable="@drawable/progressbar_selection"
		android:minHeight="2dip" android:maxHeight="5dip"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>
      	
      	      	<ProgressBar android:id="@+id/booklist_progress_filing"
		style="@android:style/Widget.ProgressBar.Horizontal"
		android:progressDrawable="@drawable/progressbar_filing"
		android:minHeight="2dip" android:maxHeight="5dip"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>
      
    <TextView  android:id="@+id/booklist_child_selection_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_weight="1"
    android:visibility="gone"
    />
    
     </LinearLayout>
    
 
 </LinearLayout>
 
 
