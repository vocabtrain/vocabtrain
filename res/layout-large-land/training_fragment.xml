<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/training_scrollview"
    android:layout_width="fill_parent"
    android:layout_marginRight="5dip"
    android:layout_height="fill_parent">

    <!--  android:paddingBottom="100dip"  -->
    
<RelativeLayout
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/training_first"
        android:layout_width="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"  />
        
    <TextView android:id="@+id/training_second" 
        android:layout_width="fill_parent" 
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"  
        android:layout_below="@id/training_first"
        />

    <TextView android:id="@+id/training_third" 
        android:layout_width="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content" 
        android:layout_below="@id/training_second"
        />


    <TextView android:id="@+id/training_first_comment"
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_height="wrap_content" 
        android:layout_below="@id/training_third"
         />
        
    <TextView android:id="@+id/training_second_comment" 
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_height="wrap_content"  
        android:layout_below="@id/training_first_comment"
        />

    <TextView android:id="@+id/training_third_comment" 
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_height="wrap_content" 
        android:layout_below="@id/training_second_comment"
        />
    
        <Button android:id="@+id/training_tatoeba"
            android:text="@string/button_tatoeba" 
        android:layout_width="wrap_content"
        android:gravity="left"
        android:visibility="gone"
        android:state_enabled="false"
        android:layout_marginLeft="50px"
                android:layout_below="@id/training_third_comment"
        
        android:layout_height="wrap_content" 
	android:layout_alignParentBottom="true"
        />
    
</RelativeLayout>
</ScrollView>
